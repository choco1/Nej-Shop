{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Ecommerce</h1>
            <p class="lead text-muted mb-0">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Harum delectus ad quae cumque voluptates dolorum, neque eveniet, placeat obcaecati magnam vel fugit nulla autem, mollitia consequuntur praesentium sit? Veniam, facere.</p>
        </div>
    </section>

    <div class="container">
        <div class="row">
            <div class="col">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        {% for image in images %}
                            <div class="carousel-item {{loop.first ? 'active':'' }}">
                                <img class="d-block w-100" src="{{ image.image }}" alt="First slide">
                            </div>
                        {% endfor %}

                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-12 col-md-3">
                <div class="card">
                    <div class="card-header bg-success text-white text-uppercase">
                        <i class="fa fa-heart"></i> Coup de coeur
                    </div>
                    {% for favorit in favorits %}
                        <img class="img-fluid border-0" src="{{favorit.image}}" alt="Card image cap">
                        <div class="card-body">
                            <h4 class="card-title text-center"><a href="{{path('single_product', {'id': favorit.id}) }}" title="View Product">{{ favorit.name }}</a></h4>
                            <div class="row">
                                <div class="col">
                                    <p class="btn btn-danger btn-block">{{ favorit.price }} &euro;</p>
                                </div>
                                <div class="col">
                                    <a href="{{path('single_product', {'id': favorit.id}) }}" class="btn btn-success btn-block">Voir</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-3">
        <div class="row">
            <div class="col-sm">
                <div class="card">
                    <div class="card-header bg-primary text-white text-uppercase">
                        <i class="fa fa-star"></i> Derniers produits
                    </div>
                    <div class="card-body">
                        <div class="row">

                                 {% for product in products %}
                                        <div class="col-sm">
                                            <div class="card">
                                                <img class="card-img-top" src="{{ product.image }}" alt="Card image cap">
                                                <div class="card-body">
                                                    <h4 class="card-title"><a href="product.html" title="View Product">{{ product.name }}</a></h4>
                                                    <p class="card-text">{{ product.description }}</p>
                                                    <div class="row">
                                                        <div class="col">
                                                            <p class="btn btn-danger btn-block">{{ product.price }} &euro;</p>
                                                        </div>
                                                        <div class="col">
                                                            <a href="cart.html" class="btn btn-success btn-block">Ajouter au panier</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                {% endfor %}


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-3 mb-4">
        <div class="row">
            <div class="col-sm">
                <div class="card">
                    <div class="card-header bg-primary text-white text-uppercase">
                        <i class="fa fa-trophy"></i> Meilleurs produits
                    </div>
                    <div class="card-body">
                        <div class="row">
                            {% for note in notes %}
                                <div class="col-lg-3">
                                    <div class="card">
                                        <img class="card-img-top" src="{{ note.image }}" alt="Card image cap">
                                        <div class="card-body">

                                                <h4 class="card-title"><a href="product.html" title="View Product">{{ note.name }}</a></h4>
                                                <p class="card-text">{{ note.description }}</p>
                                                <div class="row">
                                                    <div class="col">
                                                        <p class="btn btn-danger btn-block">{{ note.price }} &euro;</p>
                                                    </div>
                                                    <div class="col">
                                                        <a href="cart.html" class="btn btn-success btn-block">Ajouter au panier</a>
                                                    </div>
                                                </div>
                                        </div>
                                     </div>
                                 </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


